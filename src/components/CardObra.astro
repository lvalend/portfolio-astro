---
import { Image } from "astro:assets";
import Bratz from "../assets/bratz.jpg";
import Mediodia from "../assets/mediodia.png";
const {imagen,alttext,
   titulo, descripcion } = Astro.props;
---

<article class="card">
  <a href="about.html" class="card__link">
    <!-- <img src={aboutImage.src} alt="" class="card__image"> -->
     <img src={imagen} alt={alttext} class="card__image">
    <div class="card__content">
      <h2 class="card__title">{titulo}</h2>
      <p class="card__description">{descripcion}</p>
    </div>
  </a>
</article>

<style>
  .card {
    /* max-width: 300px;  */
    position: relative;
    overflow: clip;
  }

  .card__title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .card__description,
  .card__details {
    font-size: 1rem;
    margin-bottom: 1rem;
    max-width: 90%;
  }

  .card__image {
    width: 100%;
    height: auto;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform 0.4s ease-in-out;
  }

  .card__content {
    /* display: none; */
    position: absolute;
    width: 100%;
    background-color: rgba(27, 27, 27, 0.5);
    backdrop-filter: blur(5px);
    top: 0;
    bottom: 0;
    padding: 1rem;

    color: #fff;

    /* transform: translateY(100%);
    transition: transform 0.3s ease-in-out; */

    opacity: 0;
    transform: scale(0.8);
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
  }

  .card:hover .card__content {
    opacity: 1;
    transform: scale(1);
  }

  .card:hover .card__image {
    transform: scale(1.25);
  }
</style>
