---

const { titulo, descripcion} = Astro.props;
---
        <div class="trabajo_cuadrado">
          <img src="../public/papel.png" class="papel">
          <h3 class="trabajo-contenedor__title">{titulo}</h3> 
          <div class="trabajo-contenedor__texto">
            <p>{descripcion}</p>
          </div>
        </div>
<style>
    
.trabajo_cuadrado {
    width: 500px;
    height: 400px;
    position: relative;
    gap: 1rem;
    /* border: 6px solid #977cb375;
       border-radius: 20%; */
}


.papel{
    position: absolute;
    width: 480px;
    height: auto;
    z-index: -1;
      position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.trabajo-contenedor__title{
font-family: "Reenie Beanie", cursive;
font-size: 4rem;
font-weight: normal;
color: #303030;
align-self: center;
justify-self: center;
padding-top: 2rem;
    text-align: center;
    max-width: 22rem;
    margin-bottom: 0;

}


.trabajo-contenedor__texto{
    font-size: 1.2rem;
    color: #303030;
    text-align: center;
    max-width: 22rem;
    margin: 0 auto;
}
.trabajo__obras-link {
    color: #000;
    text-decoration: none;
    font-weight: bold;
    margin-top: 1rem;
    display: inline-block;
}

</style>