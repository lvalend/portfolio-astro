---

const { titulo, descripcion, img, clase } = Astro.props;
---
    <div class="contenedor-conocimientos__flex">
    <img src={img} class={clase}>
            <p class="conocimientos-title">{titulo}</p>
            <p class="conocimientos-descripcion">{descripcion}</p>
     </div>  
    
     <style>
        .contenedor-conocimientos__flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
        }
        .sobremi__conocimientos-flex__foto-size {
    max-width:  7rem;
    height: 7rem;
    padding: 0.5rem ;
    object-fit: contain;
    
}


        .conocimientos-title{
     padding-left: 0.5rem;
    padding-right: 0.5rem;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 0.2rem;
    max-width: 8rem;
}
.conocimientos-descripcion{
    font-size: 12px;
    max-width: 7rem;
    padding-left: 0.5rem;
}

.lista{
    list-style-type: disc;
    margin-left: 1.5rem;
    padding-right: 0rem;
}

.link-nostyle{
    text-decoration: none;
    color: inherit;
}



.agrandar {
    width: 8rem;
    height: auto;
}       

     </style>